<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDefaultBack"
    android:orientation="vertical"
    tools:context=".ui.module.mine.MineFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:title="个人中心"
            app:titleTextColor="@color/colorWhite" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/v_login"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mine_tv_back"
        android:clickable="true"
        android:elevation="1dp"
        android:focusable="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/user_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_user_head" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/user_head"
            android:gravity="center_vertical"
            android:text="点击登录账号"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_collect_article"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mine_tv_back"
        android:clickable="true"
        android:drawableStart="@mipmap/ic_collect_article"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="    我收藏的文章"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDefaultBack" />

    <TextView
        android:id="@+id/tv_collect_website"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mine_tv_back"
        android:clickable="true"
        android:drawableStart="@mipmap/ic_collect_website"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="    我收藏的网站"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDefaultBack" />

    <TextView
        android:id="@+id/tv_focus_words"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mine_tv_back"
        android:clickable="true"
        android:drawableStart="@mipmap/ic_focus_words"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="    我关注的主题"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:visibility="gone"
        tools:ignore="RtlSymmetry" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDefaultBack" />

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mine_tv_back"
        android:clickable="true"
        android:drawableStart="@mipmap/ic_setting"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="    我的设置"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDefaultBack" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mine_tv_back"
        android:clickable="true"
        android:drawableStart="@mipmap/ic_about"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="    关于我们"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_not_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mine_tv_back"
        android:clickable="true"
        android:drawableStart="@mipmap/ic_not_login"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="    退出登录"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />
</LinearLayout>
